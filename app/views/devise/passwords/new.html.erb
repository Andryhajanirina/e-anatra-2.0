<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>

 <section class="col-md-offset-3 padding-top-3x padding-left-right">
    <h1 class="mobile-center">Mot de passe <span class="text-semibold">oublié</span></h1>
    <div class="row padding-top">
       <div class="col-sm-8 padding-bottom-2x">
          <!-- Nav Tabs -->
          <ul class="nav-tabs mobile-center" role="tablist">
             <li><a href="/users/sign_in" role="tab" data-toggle="tab">
                <i class="material-icons person"></i>
                Se connecter
                </a>
             </li>
             <li><a href="/users/sign_up" role="tab" data-toggle="tab">
                <i class="material-icons person_add"></i>
                Créer un compte
                </a>
             </li>
             <li class="active"><a href="/users/password/new" role="tab" data-toggle="tab">
                <i class="material-icons sentiment_very_dissatisfied"></i>
                Mot de passe oublié
                </a>
             </li>
          </ul>
          <!-- .nav-tabs -->
          <!-- Tab Panes -->
          <div class="tab-content">
             <div role="tabpanel" class="tab-pane transition fade scale in active" id="profile">
                <form method="post">
                   <div class="form-element">
                      <label for="address">Adresse email</label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                   </div>
                   <div class="row">
                      <div class="col-sm-6">
                        
                      </div>
                      <div class="col-sm-6 text-right mobile-center">
                         <button type="submit" class="btn btn-primary waves-effect waves-light">M'envoyer les instructions</button>
                      </div>
                   </div>
                </form>
             </div>
          </div>
          <!-- .tab-content -->
       </div>
       <!-- .col-sm-8 -->
    </div>
    <!-- .row -->
 </section>
 <!-- .container -->

<% end %>