<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

 <section class="col-md-offset-3 padding-top-3x padding-left-right">
    <h1 class="mobile-center">Se <span class="text-semibold">connecter</span></h1>
    <div class="row padding-top">
       <div class="col-sm-8 padding-bottom-2x">
          <!-- Nav Tabs -->
          <ul class="nav-tabs mobile-center" role="tablist">
             <li class="active"><a href="/users/sign_in" role="tab" data-toggle="tab">
                <i class="material-icons person"></i>
                Se connecter
                </a>
             </li>
             <li><a href="/users/sign_up" role="tab" data-toggle="tab">
                <i class="material-icons person_add"></i>
                Créer un compte
                </a>
             </li>
          </ul>
          <!-- .nav-tabs -->
          <!-- Tab Panes -->
          <div class="tab-content">
             <div role="tabpanel" class="tab-pane transition fade scale in active" id="profile">
                <form method="post">
                   <div class="row">
                      <div class="col-sm-6">
                         <div class="form-element">
                            <label for="email">Adresse email</label>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                         </div>
                      </div>
                      <div class="col-sm-6">
                         <div class="form-element">
                            <label for="phone">Mot de passe</label>
                            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                         </div>
                      </div>
                   </div>
                   <div class="row">
                      <div class="col-sm-6">
                        <% if devise_mapping.rememberable? -%>
                         <label class="checkbox space-top">
                          <%= f.check_box :remember_me %> Se souvenir de moi
                         </label>
                        <% end -%>
                      </div>
                      <div class="col-sm-6 text-right mobile-center">
                         <button type="submit" class="btn btn-primary waves-effect waves-light">Se connecter</button>
                      </div>
                   </div>
                   <hr>
                   <div class="row">
                      <div class="col-sm-6">
                        <a href="/users/password/new">Mot de passe oublié ?</a>
                      </div>
                      <div class="col-sm-6 text-right mobile-center">
                         
                      </div>
                   </div>
                </form>
             </div>
          </div>
          <!-- .tab-content -->
       </div>
       <!-- .col-sm-8 -->
    </div>
    <!-- .row -->
 </section>
 <!-- .container -->

<% end %>