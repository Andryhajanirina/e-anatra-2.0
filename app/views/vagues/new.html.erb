<%= form_for @vague do |f| %>
    
     <!-- Content -->
     <section class="col-md-offset-3 padding-top-3x padding-left-right">
        <h1 class="mobile-center">Créer <span class="text-semibold">une session</span></h1>
        <div class="row padding-top">
           <div class="col-sm-8 padding-bottom-2x">
              
              <!-- Tab Panes -->
              <div class="tab-content">
                 <div role="tabpanel" class="tab-pane transition fade scale in active" id="profile">
                    <form method="post">
                       
                       <div class="row">
                          
                          <div class="col-sm-6">
                             <div class="form-element">
                                <label for="date">Début session</label>
                                <%= f.date_field :fin_session, id: "birthday", class: "form-control" %>
                             </div>
                          </div>
                          
                          <div class="col-sm-6">
                             <div class="form-element">
                                <label for="date">Fin session</label>
                                <%= f.date_field :debut_session, id: "birthday", class: "form-control" %>
                             </div>
                          </div>

                       </div>
                       
                        <div class="row">
                          <div class="col-sm-6">
                             
                          </div>
                          <div class="col-sm-6 text-right mobile-center"><br>
                             <button type="submit" class="btn btn-primary waves-effect waves-light">Créer session</button>
                          </div>
                        </div>
                    </form>
                 </div>
              </div>
              <!-- .tab-content -->
           </div>
           <!-- .col-sm-8 -->
        </div>
        <!-- .row -->
     </section>
     <!-- .container -->
    
    <% end %>
    
    
    